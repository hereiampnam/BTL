<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="TodoApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BTL"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SignUpActivity">
        </activity>

        <activity android:name=".Account.Account">
        </activity>

        <activity android:name=".Account.AccountDatabaseHelper">
        </activity>

        <activity android:name=".Account.AccountRepository">
        </activity>

<!--Todo Package-->

        <activity android:name=".Todo.TodoMain">
        </activity>

        <activity android:name=".Todo.TodoListAdapter">
        </activity>

        <activity android:name=".Todo.TodoDatabaseHelper">
        </activity>

        <activity android:name=".Todo.TodoRepository">
        </activity>

        <activity android:name=".DatabaseHelper">
        </activity>

    </application>

</manifest>